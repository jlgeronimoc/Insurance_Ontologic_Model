{
    "$id": "https://ontology.riskine.com/employee.json",
    "type": "object",
        "allOf": [
            {
                "$ref": "person.json"
            }
        ],
    "properties":{
        "employee-id": {
            "type": "string",
            "description": "organization-specific ID of employee"
          },
          "organizational-unit": {
            "type": "string",
            "description": "organization-specific organizational unit a person works in"
          },
          "role": {
            "type": "string",
            "description": "organization-specific role an employee fullfills in the company"
        }
    }
}